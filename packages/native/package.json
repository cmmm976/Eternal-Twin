{
  "name": "@eternal-twin/native",
  "version": "0.7.0",
  "description": "Native module for Eternal-Twin",
  "author": "Charles Samborski <demurgos@demurgos.net>",
  "licenses": [
    {
      "type": "AGPL-3.0-or-later",
      "url": "https://spdx.org/licenses/AGPL-3.0-or-later.html"
    }
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "lint": "eslint \"./src/**/*.ts\"",
    "format": "eslint --fix \"./src/**/*.ts\"",
    "native:build": "cd native && cargo build ${CARGO_FLAGS:-\"--lib\"}",
    "build": "yarn run native:build && tsc --build src/lib/tsconfig.json",
    "//install": "node-pre-gyp install --fallback-to-build=false || cargo build --manifest-path ./native/Cargo.toml --lib",
    "prepack": "yarn run build && rimraf \"native/@(artifacts.json|index.node)\"",
    "test:build": "yarn run native:build && tsc --build src/test/tsconfig.json",
    "test": "yarn run test:build && mocha \"test/**/*.spec.js\"",
    "main:build": "yarn run build",
    "start": "yarn run main:build && node --experimental-wasm-modules src/main/main.js"
  },
  "dependencies": {
    "@eternal-twin/core": "workspace:*",
    "@mapbox/node-pre-gyp": "^1.0.5",
    "kryo": "^0.12.2",
    "kryo-json": "^0.12.2",
    "neon-cli": "^0.8.3"
  },
  "devDependencies": {
    "@eternal-twin/auth-in-memory": "workspace:*",
    "@eternal-twin/auth-pg": "workspace:*",
    "@eternal-twin/email-in-memory": "workspace:*",
    "@eternal-twin/email-template-json": "workspace:*",
    "@eternal-twin/etwin-pg": "workspace:*",
    "@eternal-twin/local-config": "workspace:*",
    "@eternal-twin/oauth-provider-in-memory": "workspace:*",
    "@eternal-twin/oauth-provider-pg": "workspace:*",
    "@eternal-twin/pg-db": "workspace:*",
    "@types/chai": "^4.2.19",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.5",
    "chai": "^4.3.4",
    "eslint": "^7.29.0",
    "mocha": "^9.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.4"
  },
  "type": "module",
  "main": "./native/index.js",
  "exports": {
    "./lib/*": "./lib/*.js"
  },
  "files": [
    "./lib/",
    "./native/src/**/*",
    "./native/build.rs",
    "./native/Cargo.lock",
    "./native/Cargo.toml",
    "./native/index.d.ts",
    "./native/index.js",
    "./native/package.json"
  ],
  "binary": {
    "pkg_path": ".",
    "module_path": "./native",
    "module_name": "index",
    "host": "https://gitlab.com/eternal-twin/etwin/-/jobs/artifacts/",
    "remote_path": "native-v{version}/raw",
    "package_name": "{node_abi}-{platform}-{arch}.tar.gz"
  }
}
