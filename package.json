{
  "name": "@eternal-twin/etwin-monorepo",
  "private": true,
  "scripts": {
    "lint": "eslint \"packages/*/src/**/*.ts\"",
    "format": "eslint --fix \"packages/*/src/**/*.ts\"",
    "start": "yarn --cwd packages/website run start",
    "build:production": "yarn --cwd packages/website run prestart",
    "db:create": "yarn --cwd packages/etwin-pg start create",
    "pretest": "tsc --build ./tsconfig.test.json",
    "test": "mocha --experimental-wasm-modules \"packages/*/test/**/*.spec.js\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "mocha": "^8.1.3",
    "typescript": "^4.0.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@angular/**",
      "**/@angular-devkit/**"
    ]
  }
}
