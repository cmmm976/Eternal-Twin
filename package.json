{
  "name": "@eternal-twin/etwin-monorepo",
  "private": true,
  "scripts": {
    "lint": "eslint \"packages/*/src/**/*.ts\"",
    "format": "eslint --fix \"packages/*/src/**/*.ts\"",
    "start": "yarn --cwd packages/website run start",
    "build:production": "yarn --cwd packages/website run prestart"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "eslint": "^7.1.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "typescript": "^3.9.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@angular/**",
      "**/@angular-devkit/**"
    ]
  }
}
